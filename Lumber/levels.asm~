
	LDA #$80
	STA shadow_oam
	LDA #$01
	STA shadow_oam+1
	LDA #$00
	STA shadow_oam+2
	LDA #$80
	STA shadow_oam+3

	;; LDA #%00000001
	;; STA levels

Level_Logic:	

	LDA levels
	AND #%00000001
	CMP #%00000001
	BNE level_1

	;; AND #%00000010
	;; CMP #%00000010
	;; BEQ level_2

	;; AND #%0000010001
	;; CMP #%00000100
	;; BEQ level_3

	;; AND #%00001000
	;; CMP #%00001000
	;; BEQ level_4

	;; AND #%00010000
	;; CMP #%00010000
	;; BEQ level_5

level_1:	
	LDX #$34
	LDY #$00
trees_1:
	LDA level_1_buffer, y
	STA shadow_oam+4, y
	INY
	DEX
	CPX #$00
	BNE trees_1
	LDY #$00

	
